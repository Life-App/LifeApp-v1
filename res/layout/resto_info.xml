<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:orientation="vertical"> 

		<FrameLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" 
		    >
		 <View
		       android:layout_width="fill_parent"
		       android:layout_height="156dp"
		       android:layout_gravity="top"
		       android:background="@drawable/bg_main1"
		        >
		</View>

		  <com.loopj.android.image.SmartImageView
		      android:id="@+id/resto_image"
		      android:layout_width="150dp"
		      android:layout_height="150dp"
		      android:layout_marginLeft="10dp"
		      android:contentDescription="@string/app_desc"
		      android:src="@drawable/koala" />

		  <com.loopj.android.image.SmartImageView 
		   android:id="@+id/resto_image1"
		   android:src="@drawable/koala"
		   android:contentDescription="@string/app_desc"
		   android:layout_marginLeft="160dp"
		   android:layout_width="150dp"
		   android:layout_height="150dp"
            />
		   
		   <View
		       android:layout_width="fill_parent"
		       android:layout_height="35dp"
		       android:layout_gravity="top"
		       android:background="#AA000000" >
		</View>
		<TextView
		        android:id="@+id/title"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:padding="5dp"
		        android:layout_gravity="top|center" 
		        android:gravity="center"
		        android:textSize="20dp"
		        android:textColor="@android:color/white"
		       />
		
		</FrameLayout>
	        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >	
		<TextView
		        android:id="@+id/address"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textSize="15dp"
				android:layout_gravity="left" 
		       />	            
		<TextView
		        android:id="@+id/phone"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textSize="15dp"
				android:layout_gravity="left" 
				android:layout_below="@id/address"
		       />
    <RatingBar
         android:id="@+id/place_rating"
         style="?android:attr/ratingBarStyleSmall"
         android:numStars="5"
         android:rating="0"
         android:isIndicator="false"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@id/phone"
         />	
         </RelativeLayout>   
		
		<TextView
		        android:id="@+id/recent_review"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textSize="15dp"
				android:layout_gravity="left"
				android:paddingLeft="10dp"
				android:textStyle="bold" 
				android:text="@string/recent_review"
		       />
		
		<TextView
		        android:id="@+id/description"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:padding="10dp"
		        android:textSize="15dp"
				android:layout_gravity="left" 
		       />

	</LinearLayout>
</ScrollView>